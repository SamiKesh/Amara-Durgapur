<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/i"
        android:background="@drawable/sbstc"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="19dp"
        android:layout_margin="13dp"
        android:id="@+id/t1"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Durgapur have local bus services along with some online ticketing bus services"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="19dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/t2"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="Shyamoli"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Visit the website"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:id="@+id/t11"
        android:textColor="@color/colorSecondary"/>
    <TextView
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="19dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/t3"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="GreenLine"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="Visit the website"
        android:id="@+id/t12"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:textColor="@color/colorSecondary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="19dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:id="@+id/t4"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="SBSTC"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Visit the website"
        android:id="@+id/t13"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:textColor="@color/colorSecondary"/>


</LinearLayout>